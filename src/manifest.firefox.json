{
  "manifest_version": 2,
  "name": "Savvy - Find the best price",
  "version": "1.0.0",
  "description": "Optimize your shopping expenses by finding the best combination of products and sellers",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Savvy - Find the best price",
    "default_popup": "popup/popup.html"
  },
  "sidebar_action": {
    "default_title": "Savvy",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/icon-48.png"
  },
  "background": {
    "scripts": [
      "browser.js",
      "config/knownParsers.js",
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "locales/*.json"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-scripts/scraper.js"
      ]
    }
  ]
}